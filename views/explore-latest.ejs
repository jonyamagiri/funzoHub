<h1 class="pb-4">Explore Latest</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(course != '') { %>
    <% course.forEach(function(course, index){ %>
    <a href="/course/<%= course._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= course.image %>" alt="<%= course.title %>" loading="lazy">
      </div>
      <div class="pt-1"><%= course.title %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>
